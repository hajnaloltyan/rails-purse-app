<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Groups</h1>
    <%= link_to "New group", new_group_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="groups" class="min-w-full">
    <% @groups.each do |group| %>
      <%= link_to group_path(group) do %>
        <div class="group">
          <h3><%= group.name %></h3>
          <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
            <path d="<%= group.icon %>"/>
          </svg>
          <h3>Total Purchases: <%= number_with_precision(group.purchases.sum(:amount), precision: 2) %> â‚¬</h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
